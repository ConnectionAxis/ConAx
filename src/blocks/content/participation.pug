mixin participation(params)
	+nav-panel({ page: "participation" }).nav-panel--fixed
	.bg-gray-1.pt-5.mt-4
		.container.py-4.py-md-5
			h1.h2.text-conax-blue.text-uppercase.font-700.mb-3.mb-md-4 Discover ConAx Tool
			.hero-card.align-items-center.flex-sm-row-reverse.my-4.mb-md-n5
				.hero-card_text.hero-card_item.px-md-5.py-3
